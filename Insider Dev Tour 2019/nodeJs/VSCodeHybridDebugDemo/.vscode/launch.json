    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "node",
            "request": "launch",
            "name": "Node.js",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "debug"
            ],
            "port": 9229,
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Browser",
            "type": "edge",
            "request": "launch",
            "version": "dev",
            "port": 9222,
            "url": "http://localhost:3000",
            "webRoot": "${workspaceRoot}/northwind"
        },
    ],
    "compounds": [
        { 
            "name": "Hybrid",
            "configurations": ["Node.js", "Browser"]
        }
         ]   
}